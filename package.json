{
  "name": "makesuffix",
  "version": "1.0.2",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "license": "MIT",
  "author": "Daniel Reed",
  "description": "A tiny 6kb pluralizer for English nouns",
  "keywords": [
    "suffix",
    "plurals",
    "nouns",
    "strings"
  ],
  "devDependencies": {
    "@types/jest": "^26.0.9",
    "@typescript-eslint/eslint-plugin": "^3.9.0",
    "@typescript-eslint/parser": "^3.9.0",
    "eslint": "^7.6.0",
    "husky": "^4.2.5",
    "jest": "^26.3.0",
    "ts-jest": "^26.1.4",
    "typescript": "^3.9.7"
  },
  "files": [
    "lib/**/*"
  ],
  "scripts": {
    "dev": "tsc -w",
    "lint": "eslint src/",
    "test": "jest src/ --collectCoverage",
    "test:watch": "jest src/ --watch",
    "build": "rm -rf lib && tsc",
    "prepublish": "yarn test && yarn build"
  },
  "husky": {
    "hooks": {
      "pre-push": "yarn lint && yarn test"
    }
  }
}
